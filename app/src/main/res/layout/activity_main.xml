<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorfondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Nivel Inicial"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgfondo"
        android:layout_width="match_parent"
        android:layout_height="363dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="309dp"
        android:src="@drawable/fondo__2_" />

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="198dp"
        android:gravity="center"
        android:text="Comienza la aventura, pulsa el DADO para avanzar. CUIDADO puedes encontrarte enemigos"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnDado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="253dp"
        android:text="Dado" />

</RelativeLayout>
